<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.trade.send.SendActivity">

    <FrameLayout
        android:id="@+id/container_send"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/loading_send"
        layout="@layout/progress_shimmer"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/container_send"
        app:layout_constraintEnd_toStartOf="@+id/container_send"
        app:layout_constraintStart_toEndOf="@+id/container_send"
        app:layout_constraintTop_toBottomOf="@+id/container_send" />

</androidx.constraintlayout.widget.ConstraintLayout>