<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="TokenWatchlistsFragmentBinding">

        <variable
            name="viewModel"
            type="com.sagisu.vaultLibrary.ui.trade.watchlists.TokenWatchListsViewModel" />
        <import type="android.view.View"/>
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/token_watchlists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.trade.watchlists.TokenWatchlistsActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/watchlist_toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/guideline44"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guideline43"
                app:layout_constraintTop_toTopOf="@+id/guideline45">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/token_watchlists_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/token_watchlists_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:elevation="50dp"
                    android:visibility="@{(viewModel.coinMetrics.supported || viewModel.coinSelected.supported) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/token_watchlists_send"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_receive" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/token_watchlists_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="50dp"
                    android:visibility="@{viewModel.coinSelected.balance>0 ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_send" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/mtrl_textinput_default_box_stroke_color"
                app:layout_constraintStart_toStartOf="@+id/guideline43"
                app:layout_constraintTop_toBottomOf="@+id/watchlist_toolbar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    imageUrl="@{viewModel.coinSelected.logo128dp}" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/token_watchlists_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/rubik_medium"
                android:text='@{"$"+String.format("%.3f",viewModel.coinMetrics.market_data.price_usd)}'
                android:textColor="@color/text_500"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/materialCardView5"
                app:layout_constraintStart_toEndOf="@+id/materialCardView5"
                app:layout_constraintTop_toTopOf="@+id/materialCardView5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/token_watchlists_market_cap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/rubik_medium"
                android:text='@{String.format("%.3f",viewModel.coinMetrics.market_data.getPercent_change_usd_last_24_hours)+"%"}'
                android:textColor="#20C997"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/token_watchlists_buy_price"
                app:layout_constraintStart_toEndOf="@+id/token_watchlists_buy_price"
                app:layout_constraintTop_toTopOf="@+id/token_watchlists_buy_price"
                app:marginRaiseColor="@{String.valueOf(viewModel.coinMetrics.market_data.getPercent_change_usd_last_24_hours).charAt(0)}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/token_watchlists_day_highest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:text="1D Highest"
                android:textColor="@color/text_200"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/token_watchlists_day_highest_price"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/token_watchlists_day_highest_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/rubik_medium"
                android:text='@{"$"+String.format("%.3f",viewModel.coinMetrics.market_data.ohlcv_last_24_hour.high)}'
                android:textColor="@color/text_500"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/token_watchlists_day_highest"
                app:layout_constraintEnd_toStartOf="@+id/token_watchlists_pipe"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/token_watchlists_day_highest"
                app:layout_constraintTop_toTopOf="@+id/token_watchlists_day_highest" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/token_watchlists_pipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/rubik_medium"
                android:text="|"
                android:textColor="@color/text_200"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/token_watchlists_day_highest_price"
                app:layout_constraintEnd_toStartOf="@+id/token_watchlists_day_lowest"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/token_watchlists_day_highest_price"
                app:layout_constraintTop_toTopOf="@+id/token_watchlists_day_highest_price" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/token_watchlists_day_lowest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="1D Lowest"
                android:textColor="@color/text_200"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/token_watchlists_pipe"
                app:layout_constraintEnd_toStartOf="@+id/token_watchlists_day_lowest_price"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/token_watchlists_pipe"
                app:layout_constraintTop_toTopOf="@+id/token_watchlists_pipe" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/token_watchlists_day_lowest_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/rubik_medium"
                android:text='@{"$"+String.format("%.3f",viewModel.coinMetrics.market_data.ohlcv_last_24_hour.low)}'
                android:textColor="@color/text_500"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/token_watchlists_day_lowest"
                app:layout_constraintEnd_toStartOf="@+id/guideline44"
                app:layout_constraintStart_toEndOf="@+id/token_watchlists_day_lowest"
                app:layout_constraintTop_toTopOf="@+id/token_watchlists_day_lowest" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout20"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline44"
                app:layout_constraintStart_toStartOf="@+id/guideline43"
                app:layout_constraintTop_toBottomOf="@+id/token_watchlists_day_highest_price">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/price_chart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_container"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/price_chart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shimmer_duration="800">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view4"
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_margin="10dp"
                            android:background="@color/black"
                            app:layout_constraintBottom_toTopOf="@+id/view5"
                            app:layout_constraintEnd_toStartOf="@+id/guideline49"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="@+id/guideline48"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/view5"
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_margin="10dp"
                            android:background="@color/black"
                            app:layout_constraintBottom_toTopOf="@+id/view6"
                            app:layout_constraintEnd_toStartOf="@+id/guideline49"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="@+id/guideline48"
                            app:layout_constraintTop_toBottomOf="@+id/view4" />

                        <View
                            android:id="@+id/view6"
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_margin="10dp"
                            android:background="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/guideline49"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="@+id/guideline48"
                            app:layout_constraintTop_toBottomOf="@+id/view5" />

                       <!-- <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/guideline49"
                            app:layout_constraintStart_toStartOf="@+id/guideline48"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/logo_grey" />
-->
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline48"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.1" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline49"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.9" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="1 Day"
                            android:visibility="gone" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="3 Days" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="1 Week" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_month"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="1 Month" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="1 Year" />

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="All" />
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#F3F5F8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout20">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView94"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Your Portfolio"
                    android:textColor="@color/text_500"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline46"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/materialCardView7"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/guideline46"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView94">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/appCompatTextView95"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="Balance"
                            android:textColor="@color/text_200"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/watchlists_token_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:text='@{((viewModel.coinSelected.balance == (long) viewModel.coinSelected.balance)?String.format("%d",(long)viewModel.coinSelected.balance) : String.format("%.6f",viewModel.coinSelected.balance)) +" "+viewModel.coinSelected.symbol}'
                            android:textColor="@color/text_500"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toTopOf="@id/show_decimal_points"
                            app:layout_constraintStart_toStartOf="@+id/appCompatTextView95"
                            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView95" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/show_decimal_points"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/rubik_medium"
                            android:text="Show decimals"
                            android:textColor="@color/vaultColorPrimary"
                            android:textSize="14sp"
                            android:visibility='@{(String.valueOf(viewModel.coinSelected.balance).split("\\.")[1].length() >6 )? View.VISIBLE: View.GONE}'
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/appCompatTextView95"
                            app:layout_constraintTop_toBottomOf="@+id/watchlists_token_balance" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/materialCardView8"
                    app:layout_constraintEnd_toStartOf="@+id/guideline47"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/materialCardView8"
                    app:layout_constraintTop_toTopOf="@+id/materialCardView8">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/appCompatTextView96"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="Current Value"
                            android:textColor="@color/text_200"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/watchlists_current_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="16dp"
                            android:text='@{"$"+String.format("%.6f",viewModel.coinSelected.usdBalance)}'
                            android:textColor="@color/text_500"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/appCompatTextView96"
                            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView96" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/guideline47"
                    app:layout_constraintStart_toStartOf="@+id/guideline46"
                    app:layout_constraintTop_toBottomOf="@+id/materialCardView8">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="Limit Orders"
                        android:textColor="@color/text_500"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_right_arrow" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/white"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline47"
                    app:layout_constraintStart_toStartOf="@+id/guideline46"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout21">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="Transactions"
                        android:textColor="@color/text_500"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_right_arrow" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="20dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="20dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView97"
